<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddCardsActivity"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/vb"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/backToReviewOrder"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Credit/Debit Card"
            android:layout_toRightOf="@id/backToReviewOrder"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:letterSpacing="0.02"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/vb"
        android:background="@color/light_gray">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:letterSpacing="0.04"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="Payment Info"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hhj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nb"

        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="14dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:letterSpacing="0.01"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="4dp"
            android:textCursorDrawable="@drawable/cursor_blue_color"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/light_gray"
            android:layout_marginHorizontal="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Number"
            android:textSize="14dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/editCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginTop="5dp"
            android:maxLength="19"
            android:inputType="phone"
            android:textCursorDrawable="@drawable/cursor_blue_color"
            android:paddingLeft="4dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/light_gray"
            android:layout_marginHorizontal="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expiry Date"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/editExpiryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:paddingLeft="3dp"
                    android:textSize="14dp"
                    android:maxLength="7"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/cursor_blue_color"
                    android:fontFamily="@font/roboto_regular" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="6">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CVV"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_gray"
                    android:layout_marginTop="12dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:paddingLeft="3dp"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/cursor_blue_color"
                    android:maxLength="4"
                    android:fontFamily="@font/roboto_regular" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/light_gray"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/hgf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/hy"
        android:layout_below="@+id/hhj"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:id="@+id/hy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/lo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_marginBottom="5dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSavePaymentInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="16dp"
                android:letterSpacing="0.02"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@color/blue"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>