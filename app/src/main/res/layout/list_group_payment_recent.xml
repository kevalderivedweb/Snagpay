<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photoPayment"
        android:layout_width="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_height="30dp"
        android:src="@drawable/dollar_logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/photoPayment"
        android:orientation="vertical">
        <TextView
            android:id="@+id/paidPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:letterSpacing="0.02"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:textColor="@color/dark_gray"
            android:layout_height="wrap_content"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/datePayment"
            android:layout_width="wrap_content"
            android:textColor="@color/dark_gray"
            android:layout_height="wrap_content"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/pricePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ivGroupIndicator"
        android:layout_centerVertical="true"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginEnd="10dp"
        android:textColor="@color/red"/>
    <ImageView
        android:id="@+id/ivGroupIndicator"
        android:layout_width="15dp"
        android:layout_height="8dp"
        android:layout_marginEnd="12dp"
        android:layout_centerVertical="true"
        android:background="@drawable/group_indicator"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>