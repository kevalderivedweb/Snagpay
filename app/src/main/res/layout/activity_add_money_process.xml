<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".Activity.Activity_AddMoneyProcess">

    <RelativeLayout
        android:id="@+id/vb"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/backToPaymentInfo1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_black"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/green"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add money to SNAG Wallet"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:letterSpacing="0.02"
            android:fontFamily="@font/roboto_medium"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$150"
            android:letterSpacing="0.02"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Name"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:letterSpacing="0.02"/>

        <TextView
            android:id="@+id/txtCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5412 **** **** 0987"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtBankName"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:letterSpacing="0.02"/>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/txt_5dp_lightgray"
            android:layout_below="@+id/txtCardNumber">
            
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="CVV"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:maxLength="4"
                android:textCursorDrawable="@drawable/cursor_blue_color"
                android:textSize="14dp"
                android:background="#00000000"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/cvv"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginEnd="-12dp"
            android:layout_marginTop="-12dp"
            android:layout_alignParentEnd="true"
            android:button="@drawable/radio_button_custom"
            android:checked="true" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddMoneyFinal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue"
        android:text="Pay $150"
        android:textSize="14dp"
        android:letterSpacing="0.02"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="7dp"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/txtBankName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Name"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.02"/>

        <TextView
            android:id="@+id/txtCardNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5412 **** **** 0987"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtBankName2"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:letterSpacing="0.02"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioBankname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginEnd="-12dp"
            android:layout_alignParentEnd="true"
            android:button="@drawable/radio_button_custom" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/txtBankName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Name"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.02"/>

        <TextView
            android:id="@+id/txtCardNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5412 **** **** 0987"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtBankName3"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:letterSpacing="0.02"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioBankname3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginEnd="-12dp"
            android:layout_alignParentEnd="true"
            android:button="@drawable/radio_button_custom" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/txtBankName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Name"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.02"/>

        <TextView
            android:id="@+id/txtCardNumber4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5412 **** **** 0987"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtBankName4"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:letterSpacing="0.02"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioBankname4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginEnd="-12dp"
            android:layout_alignParentEnd="true"
            android:button="@drawable/radio_button_custom" />
    </RelativeLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>