<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity_Gifting">

    <RelativeLayout
        android:id="@+id/vb"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/backToPaymentInfo1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gifting (Holiday Gifting Shop)"
            android:layout_toRightOf="@id/backToPaymentInfo1"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:letterSpacing="0.02"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="7dp">

        <ImageView
            android:id="@+id/as"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/dollar_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/as"
            android:layout_marginLeft="5dp"
            android:text="1,235"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/txt_5dp_round_shape" />

        <LinearLayout
            android:id="@+id/linearFilterSortBy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_around_relative_5dp"
                android:layout_toLeftOf="@id/FilterHomeInner"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    android:textSize="12dp"
                    android:textColor="#383838"
                    android:layout_alignParentRight="true"
                    android:text="Sort By"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/dropdown"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/FilterHomeInner"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_around_relative_5dp"
                android:layout_marginRight="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="12dp"
                    android:textColor="#383838"
                    android:layout_alignParentRight="true"
                    android:text="Filter"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/dropdown"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/asx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="7dp"
                android:layout_margin="10dp"
                android:background="@drawable/border_round_gray"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/s1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1.1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/img1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/s2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical"
                    android:layout_weight="0.9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Ravenswood Health Center"
                        android:letterSpacing="0.04"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#2a246e"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mesa : 22mi"
                        android:layout_marginTop="3dp"
                        android:letterSpacing="0.02"
                        android:textColor="#535453"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">
                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/ratingBarInnerHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:isIndicator="false"
                            android:stepSize="1"
                            style="?android:attr/ratingBarStyleSmall"
                            android:theme="@style/RatingBar"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.02"
                            android:textColor="#383838"
                            android:text="(520 Rating)"
                            android:textSize="12dp"
                            android:layout_toRightOf="@+id/ratingBarInnerHome"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="$20.00"
                        android:textColor="#3b8112"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 hour message"
                        android:letterSpacing="0.02"
                        android:textColor="#535453"/>

                    <TextView
                        android:id="@+id/deal"
                        android:layout_marginTop="10dp"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:text="View Deal"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/txt_5dp_round_shape" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recGifting"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>