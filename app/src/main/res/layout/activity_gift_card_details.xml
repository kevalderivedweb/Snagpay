<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_GiftCardDetails">

    <RelativeLayout
        android:id="@+id/vb"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/backToPaymentInfo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gift Card Detail"
            android:layout_toRightOf="@id/backToPaymentInfo"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/fdfdf"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/vb"
        android:background="@color/light_gray"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recGiftDetail"
        android:layout_width="match_parent"
        android:layout_below="@+id/fdfdf"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/noTransaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Transactions"
        android:visibility="gone"
        android:gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:layout_below="@+id/fdfdf"
        android:textSize="20dp"
        android:textColor="@color/black"/>

</RelativeLayout>