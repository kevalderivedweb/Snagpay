<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/paymentHolderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Micheal  Stevens"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/paymentHolderCardNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5412 7501 2345 0987"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/paymentHolderName"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/paymentDigit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09/2020"
            android:layout_below="@+id/paymentHolderCardNo"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:background="@drawable/txt_5dp_lightgray"
            android:text="334"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_below="@+id/paymentHolderCardNo"
            android:layout_toEndOf="@+id/paymentDigit"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/radioPayment"
            android:text="Edit"
            android:textColor="@color/green"
            android:textSize="16dp"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-12dp"
            android:layout_marginRight="-10dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_alignParentRight="true"
            android:button="@drawable/radio_button_custom" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/light_gray"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>