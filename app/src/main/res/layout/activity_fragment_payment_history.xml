<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.Fragment_OrderHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tabLinearPurcahse1Payment"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tabTxtPurcahse1Payment"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Recent"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:background="@drawable/button_gray_order_history"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabLinearPurcahse2Payment"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tabTxtPurcahse2Payment"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Monthly transaction"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textColor="#3e3e3e"
                android:textSize="15dp"
                android:background="@drawable/btn_white_round_order"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentLinearPaymentHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>