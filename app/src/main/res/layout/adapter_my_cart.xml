<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="110dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="True Wireless Blutooth Earphone"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:letterSpacing="0.02"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="630+ bought"
                android:textColor="@color/dark_gray"
                android:textSize="14dp"
                android:layout_marginTop="2dp"
                android:letterSpacing="0.02"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$29.95"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:letterSpacing="0.02"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="12.5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="4"
            android:layout_gravity="center_vertical"
            android:weightSum="3"
            android:background="@drawable/edittext_border_gray"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnMinusProduct"
                android:layout_width="30dp"
                android:layout_weight="1.25"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_height="wrap_content"
                android:src="@drawable/minus"/>

            <View
                android:id="@+id/yuy"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>

            <TextView
                android:id="@+id/txtItemProducts"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:gravity="center"
                android:text="0"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>

            <ImageView
                android:id="@+id/btnPlusProduct"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_weight="1.25"
                android:layout_marginEnd="1dp"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_weight="4.5">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_border_gray"
                android:textAllCaps="false"
                android:textColor="@color/light_black"
                android:letterSpacing="0.02"
                android:textSize="14dp"
                android:text="Delete"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_weight="4">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_border_gray"
                android:textAllCaps="false"
                android:textColor="@color/light_black"
                android:letterSpacing="0.02"
                android:textSize="14dp"
                android:text="Save for later"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed to checkout"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:letterSpacing="0.02"
        android:textAllCaps="false"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_5dp_blue"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"/>
</LinearLayout>
