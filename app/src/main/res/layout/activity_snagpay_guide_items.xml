<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SnagpayGuideItems">

    <RelativeLayout
        android:id="@+id/vb"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/backToPaymentInfo1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SNAGpay Guide"
            android:layout_toEndOf="@id/backToPaymentInfo1"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:letterSpacing="0.02"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:background="@drawable/food_banner">

                <TextView
                    android:id="@+id/txtSnagpayItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:letterSpacing="0.02"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linrSnagPayItems"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/corner_7dp_green">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:letterSpacing="0.02"
                        android:textSize="12dp"
                        android:text="Home Service"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/corner_7dp_blue">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:letterSpacing="0.02"
                        android:textSize="12dp"
                        android:text="Work Service"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/corner_7dp_purple">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:letterSpacing="0.02"
                        android:textSize="12dp"
                        android:text="Personal Service"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:padding="7dp">

                <ImageView
                    android:id="@+id/as"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/dollar_logo"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/as"
                    android:layout_marginLeft="5dp"
                    android:text="1,235"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/txt_5dp_round_shape" />

                <LinearLayout
                    android:id="@+id/linearFilterGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">
                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_around_relative_5dp"
                        android:layout_toLeftOf="@id/FilterHomeInner"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_centerVertical="true"
                            android:textSize="12dp"
                            android:textColor="#383838"
                            android:layout_alignParentRight="true"
                            android:text="Sort By"/>
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/dropdown"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/FilterHomeInner"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/border_around_relative_5dp"
                        android:layout_marginRight="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:textColor="#383838"
                            android:textSize="12dp"
                            android:layout_alignParentRight="true"
                            android:text="Filter"/>
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/dropdown"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/resGuideItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>