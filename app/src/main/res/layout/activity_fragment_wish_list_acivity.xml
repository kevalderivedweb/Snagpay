<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentWishListAcivity">

    <RelativeLayout
        android:id="@+id/rltvWishListTopBar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Wishlist (2)"
            android:layout_marginStart="10dp"
            android:textSize="18dp"
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtEditWishlistTopBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/roboto_medium"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:letterSpacing="0.02"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rltvWishListTopBarDeleteCancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgCancelWishlishTopBar"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/cancel"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Select All"
            android:layout_toRightOf="@+id/imgCancelWishlishTopBar"
            android:layout_marginStart="15dp"
            android:textSize="18dp"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resFragWishList"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_marginTop="-1dp"
            android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/light_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Recently Viewed"
                android:gravity="center_vertical"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:lineSpacingExtra="0.02dp"
                android:layout_marginStart="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/resFragRecentlyViewed"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_marginBottom="-1dp"
                android:layout_marginTop="-3dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </ScrollView>
</LinearLayout>