<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity_About_App">

    <RelativeLayout
        android:id="@+id/vb"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/backToPaymentInfo1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About App"
            android:layout_toRightOf="@id/backToPaymentInfo1"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:letterSpacing="0.02"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:scaleType="center"
        android:src="@drawable/logo"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build Version"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/dark_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNAGpay, 1.0.0"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:textSize="18dp"
        android:textColor="@color/dark_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@ 2021 SNAGpay, Inc. All rights reserved."
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:textSize="18dp"
        android:textColor="@color/dark_gray"/>

</LinearLayout>