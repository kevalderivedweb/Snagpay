<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".Activity_GiveAsGift">

    <RelativeLayout
        android:id="@+id/vb"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/backToPaymentInfo1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give as a Gift"
            android:layout_toRightOf="@id/backToPaymentInfo1"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:letterSpacing="0.02"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/gop"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/vb"
        android:background="@color/light_gray"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/gop"
    android:layout_above="@id/dfp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:padding="10dp">

        <RadioGroup
            android:id="@+id/radioGroupGift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-11dp"
            android:layout_marginTop="-7.5dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioEmail"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:button="@drawable/radio_button_custom"
                android:checked="true" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:layout_marginTop="-9.5dp"
                android:button="@drawable/radio_button_custom" />
        </RadioGroup>

        <TextView
            android:id="@+id/EmailGift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginLeft="30dp"
            android:letterSpacing="0.03"
            android:layout_marginTop="2dp"
            android:text="Email Gift"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_below="@+id/EmailGift"
            android:layout_marginLeft="30dp"
            android:letterSpacing="0.03"
            android:layout_marginTop="11dp"
            android:text="Text Gift"/>
    </RelativeLayout>

        <LinearLayout
            android:id="@+id/lnrGiftEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipient's email :"
                android:textSize="14dp"
                android:textColor="@color/dark_gray"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:paddingLeft="4dp"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipient's name :"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark_gray"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:paddingLeft="4dp"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From :"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/dark_gray"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:paddingLeft="4dp"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/dark_gray"/>

            <EditText
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:gravity="top|left"
                android:maxLines="10"
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipient's email :"
                android:textSize="14dp"
                android:textColor="@color/dark_gray"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:paddingLeft="4dp"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Gift :"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/dark_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:paddingLeft="4dp"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="2dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/calender"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrGiftText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number :"
                android:textSize="14dp"
                android:textColor="@color/dark_gray"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:paddingLeft="4dp"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/dark_gray"/>

            <EditText
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:gravity="top|left"
                android:maxLines="10"
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Gift :"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/dark_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:paddingLeft="4dp"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="2dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/calender"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

    <View
        android:id="@+id/dfp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="-2dp"
        android:background="@color/gray"
        android:layout_above="@id/pl"/>

    <LinearLayout
        android:id="@+id/pl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGiveGift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue to Confirm Purchase"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:background="@color/blue"
            android:layout_gravity="center"/>
    </LinearLayout>


</RelativeLayout>