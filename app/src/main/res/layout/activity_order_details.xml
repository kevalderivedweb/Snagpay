<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity_OrderDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/backToCurrentOrder"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/back_black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Details"
                    android:layout_toEndOf="@id/backToCurrentOrder"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginStart="10dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/light_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtOrderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15dp"
                    android:layout_toLeftOf="@+id/cardViewOrdrImg"
                    android:layout_toStartOf="@+id/cardViewOrdrImg"
                    android:layout_marginEnd="60dp"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/black"
                    android:letterSpacing="0.02"/>

                <TextView
                    android:id="@+id/priceOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_below="@+id/txtOrderName"
                    android:layout_marginTop="20dp"
                    android:textColor="#2f7905"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewOrdrImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:id="@+id/imgOrderDetails"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/circular_green_textview"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="33dp"
                        android:background="#00c725"/>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/circular_green_textview"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="34dp"
                        android:background="#00c725"/>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/circular_green_textview"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="34dp"
                        android:background="#00c725"/>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/circular_green_textview"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Order Placed"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/dark_gray"
                        android:text="We have recevied your order."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Order Confirmed"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/dark_gray"
                        android:text="Your order has been confirmed."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Order Processed"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/dark_gray"
                        android:text="We hava prepare your order."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Ready to Pickup"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/dark_gray"
                        android:text="Your order is ready to pickup."/>
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="CANCEL ORDER"
                android:letterSpacing="0.02"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/nameOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textSize="15dp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/addressPin"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:lineSpacingExtra="1dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/phoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/roboto_medium"
                android:textSize="12dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/light_gray"
                android:layout_marginTop="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Price"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/priceOrderDet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="@color/light_black"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_alignParentBottom="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="SNAGpay Bucks"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/bucks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_alignParentBottom="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Tax amount"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/taxAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_alignParentBottom="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Shipping amount"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/amountShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_alignParentBottom="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Total amount paid"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/totalPaidAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="$20"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>